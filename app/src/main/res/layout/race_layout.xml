<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descriptionRace"
        android:layout_width="318dp"
        android:layout_height="196dp"
        android:layout_marginBottom="28dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCharacter" />

    <ImageView
        android:id="@+id/imageCharacter"
        android:layout_width="203dp"
        android:layout_height="252dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:background="#C30E0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/raceRadioGroup"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RadioGroup
        android:id="@+id/raceRadioGroup"
        android:layout_width="94dp"
        android:layout_height="247dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_Human"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Human" />

        <RadioButton
            android:id="@+id/radioButton_Dwarf"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Dwarf" />

        <RadioButton
            android:id="@+id/radioButton_Elf"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Elf" />

        <RadioButton
            android:id="@+id/radioButton_Gnome"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Gnome" />

        <RadioButton
            android:id="@+id/radioButton_Half_Orc"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Half-Orc" />

        <RadioButton
            android:id="@+id/radioButton_Half_Elf"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Half-Elf" />

        <RadioButton
            android:id="@+id/radioButton_Tieflin"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Tieflin" />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>